{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "ES2022",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./dist",
    "baseUrl": "./src",
  },
  "include": [
    "src/**/*",
    "e2e/**/*",
    "test/init/**/*",
  ],
  "exclude": [
    "node_modules"
  ],
  "presets": [
    [
      "next/babel",
      {
        "preset-env": {
          "targets": {
            "node": true
          }
        }
      }
    ]
  ]
}
