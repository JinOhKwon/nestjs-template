{
  "collectCoverage": true,
  "coverageDirectory": "<rootDir>/coverage/",
  "coverageThreshold": {
      "global": {
          "branches": 100,
          "functions": 100,
          "lines": 100,
          "statements": 100
      }
  },
  "moduleFileExtensions": ["js", "json", "ts"],
  "moduleDirectories": ["node_modules", "src"],
  "rootDir": "..",
  "testMatch": ["<rootDir>/test/**/*.e2e-spec.ts"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "globals": {
    "ts-jest": {
      "tsconfig": "<rootDir>/tsconfig.json"
    }
  },
  "moduleNameMapper": {
    "src/(.*)": "<rootDir>/src/$1"
  }
}
