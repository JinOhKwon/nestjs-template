{
  "rootDir": ".",
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "moduleDirectories": [
    "node_modules",
    "src"
  ],
  "testMatch": [
    "<rootDir>/src/**/*spec.ts"
  ],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "testEnvironment": "node",
  "coverageDirectory": "<rootDir>/coverage/unit",
  "coverageReporters": [
    "json",
    "lcov"
  ],
  "collectCoverage": true,
  "coverageThreshold": {
    "global": {
      "branches": 100,
      "functions": 100,
      "lines": 100,
      "statements": 100
    }
  },
  "globals": {
    "ts-jest": {
      "tsconfig": "<rootDir>/tsconfig.json"
    }
  },
  "moduleNameMapper": {
    "src/(.*)": "<rootDir>/src/$1"
  }
}